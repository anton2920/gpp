package main

import "github.com/anton2920/gofa/net/html"

type ModelUser struct {
	FirstName      string
	Email          string
	FavoriteColors []string
	RawContent     string
	EscapedContent string
}

func SimpleOld(h *html.HTML, u *ModelUser) {
	h.Begin()

	h.BodyBegin()
	{
		h.H1(u.FirstName)

		h.PBegin()
		h.String(`Here's a list of your favorite colors:`)
		h.PEnd()

		h.ULBegin()
		{
			for _, colorName := range u.FavoriteColors {
				h.LIBegin()
				h.HString(colorName)
				h.LIEnd()
			}
		}
		h.ULEnd()
	}
	h.BodyEnd()

	h.End()
}

