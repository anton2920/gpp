func TestPage(h *html.HTML, i int) {
	<!DOCTYPE html>

	<head>
		<title></title>
	</head>

	<body>
		<Header/>

		<h1>Hello!</h1>

		<div aria-label="whatever">
			<h1>
				if i == 1 {
					true
				} else {
					false
				}
			</h1>
		</div>

		<hr/>

		<UserTitle className="text-center" user={user}/>

		<Crumbs>
			<Crumb><notheme><a class="text-decoration" href="/">Home</a></notheme></Crumb>
	    		<Crumb><a href={h.PathID("/user/", user.ID)}></a></Crumb>
		</Crumbs>

		<input type="text" minlength="1" maxlength="45" name="FirstName" value={user.FirstName} placeholder="First name" required>

		<!-- Test comment. -->
		<ul>
			for i := 0; i < len(groups); i++ {
				{{items := groups[i]}}
				if len(items) == 0 {
					<p>Boo!</p>
				} else if len(items) > 0 {
					for i, item := range items {
						switch item {
						case "Apple":
							<li>Here's an {item}-{item}!</li>
						case "Orange":
							<li>Annoying!</li>
						default:
							<li>Item number #{{h.Int(i)}} = {item}</li>
						}
					}
				}
			}
		</ul>

		<Footer/>
	</body>

	</html>
